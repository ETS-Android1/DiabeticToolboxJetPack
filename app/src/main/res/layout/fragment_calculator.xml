<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_and_data.calculator.CalculatorFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_products_selection_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view_meal_summary_card_view"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:id="@+id/MealAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/search_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MealAutoCompleteTextView"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_meal_summary_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/bottom_menu_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/layout_meal_summary_constraint_layout">

            <TextView
                android:id="@+id/text_meal_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="MealSummary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_carbs_exchanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="WW:"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_carbs_exchanger_summary_value"
                app:layout_constraintEnd_toStartOf="@+id/text_carbs_exchanger_summary_value" />

            <TextView
                android:id="@+id/text_protein_fat_exchanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBT:"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_protein_fat_exchanger_summary_value"
                app:layout_constraintEnd_toEndOf="@+id/text_carbs_exchanger" />

            <TextView
                android:id="@+id/text_meal_fat_summary"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="@string/macro_fat"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_fat_summary_value"
                app:layout_constraintEnd_toEndOf="@+id/text_meal_carbs_summary" />

            <TextView
                android:id="@+id/text_meal_proteins_summary"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="@string/macro_proteins"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_proteins_summary_value"
                app:layout_constraintEnd_toEndOf="@+id/text_meal_fat_summary" />

            <TextView
                android:id="@+id/text_meal_carbs_summary"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="8dp"
                android:text="@string/macro_carbs"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_carbs_summary_value"
                app:layout_constraintEnd_toStartOf="@+id/text_carbs_summary_value" />

            <TextView
                android:id="@+id/text_carbs_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_carbs_exchanger_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="999"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_meal_carbs_summary"
                app:layout_constraintEnd_toStartOf="@+id/text_meal_carbs_summary" />

            <TextView
                android:id="@+id/text_fat_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="32dp"
                android:text="0"
                app:layout_constraintBottom_toTopOf="@+id/text_proteins_summary_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_carbs_summary_value"
                app:layout_constraintTop_toBottomOf="@+id/text_carbs_summary_value" />

            <TextView
                android:id="@+id/text_proteins_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_fat_summary_value" />

            <TextView
                android:id="@+id/text_protein_fat_exchanger_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="999"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_meal_proteins_summary"
                app:layout_constraintEnd_toStartOf="@+id/text_meal_carbs_summary" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/calculator_button_consume_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@android:drawable/ic_input_add"
                android:onClick="onClickConsumeMeal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_protein_fat_exchanger"
                app:layout_constraintStart_toEndOf="@+id/text_meal_summary"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>